{
    "name": "YouTube™ Refined",
    "version": "0.1.9",
    "version_name": "1.9 Beta",
    "author": "Marc Guiselin",
    "manifest_version": 2,
    "offline_enabled": true,
    "description": "Refine your Youtube experience!  Block ads, fix clickbaity video titles, show accurate video views, and more with Youtube™ Refined!",
    "browser_action": {
        "default_icon": {
            "19": "icons/19.png",
            "38": "icons/38.png"
        },
        "default_popup": "popup.html",
        "default_title": "Youtube™ Refined"
    },
    "background": {
        "scripts": [
            "scripts/common/update-notes.js",
            "scripts/background.js"
        ]
    },
    "icons": {
        "16": "icons/16.png",
        "19": "icons/19.png",
        "24": "icons/38.png",
        "32": "icons/38.png",
        "38": "icons/38.png",
        "48": "icons/48.png",
        "64": "icons/128.png",
        "96": "icons/128.png",
        "128": "icons/128.png"
    },
    "content_scripts": [{
        "all_frames": false,
        "js": [
            "scripts/common/utils.js",
            "scripts/common/title-caps.js",
            "scripts/content.js"
        ],
        "matches": ["*://www.youtube.com/*"],
        "css": ["css/content.css"],
        "run_at": "document_start"
    }],
    "permissions": [
        "*://www.youtube.com/*",
        "unlimitedStorage",
        "storage",
        "webRequest",
        "webRequestBlocking"
    ],
    "minimum_chrome_version": "50",
    "incognito": "spanning",
    "web_accessible_resources": ["images/*.png", "css/themes/*.css", "update-notification.html"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}