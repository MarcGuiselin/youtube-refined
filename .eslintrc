{  
    "extends": [
        "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {  
            "modules": true
        }
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "globals": {
        "chrome": true,
        "Tag": true,
        "updateNotes": true,
        "Vue": true,
        "mainVue": true,
        "Chart": true
    },
    "rules": {
        "block-scoped-var": 2,
        "capitalized-comments": 1,
        "curly": 0,
        "eqeqeq": "off",
        "no-console": 0,
        "no-alert": 2,
        "no-case-declarations": 0,
        "no-empty": 0,
        "no-empty-function": 1,
        "no-extend-native": 0,
        "no-extra-bind": 1,
        "no-implied-eval": 2,
        "no-invalid-this": 0,
        "no-iterator": 1,
        "no-labels": 1,
        "no-lone-blocks": 0,
        "no-loop-func": 0,
        "no-new": 1,
        "no-new-func": 1,
        "no-new-wrappers": 1,
        "no-useless-escape": 1,
        "no-unused-vars": 1,
        "quotes": [1, "single", {"avoidEscape": true}],
        "spaced-comment": [1, "always", { "exceptions": ["TODO", "-"] }],
        "strict": 2,
        "yoda": [1, "never"]
    }
}